<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DonationMethodActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_1x"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    tools:layout_editor_absoluteX="44dp"
                    tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CHOOSE DONATION METHOD"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="italic"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-174dp"
            android:text="You chose to be a sponsor for your team!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="174dp"
            android:text="You will have a chance to confirm donation amount at the end of the challenge before any funds will be transferred to World Wildlife"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal"/>

        <ImageButton
            android:id="@+id/cardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/skip_enter_steps_manually_fitbit_button"
            android:layout_alignTop="@+id/prayPalBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/card_lg"/>

        <ImageButton
            android:id="@+id/strangeVBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/cardBtn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/venmo_lg"/>

        <ImageButton
            android:id="@+id/prayPalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/skip_enter_steps_manually_fitbit_button"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="159dp"
            android:background="@android:color/transparent"
            android:src="@drawable/paypal_lg"/>

        <Button
            android:id="@+id/skip_enter_steps_manually_fitbit_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="96dp"
            android:background="#EEEEEE"
            android:onClick="onClickSkip"
            android:text="SKIP, AND COMPLETE LATER"
            android:textColor="#202020"/>

        <ImageView
            android:id="@+id/project_cat_logo_pos"
            android:layout_width="220dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/cardBtn"
            android:layout_marginBottom="26dp"
            android:src="@drawable/project_cat_logo_pos"/>

        <ImageView
            android:id="@+id/wwf_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/project_cat_logo_pos"
            android:layout_alignEnd="@+id/prayPalBtn"
            android:src="@drawable/wwf_logo_black_background"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>