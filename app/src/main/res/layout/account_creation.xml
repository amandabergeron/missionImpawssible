<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_1x"/>


        <TextView
            android:id="@+id/choose_device_text"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="Create An Account"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="231dp"
            android:layout_height="40dp"
            android:layout_below="@+id/choose_device_text"
            android:layout_centerHorizontal="true"
            android:background="#3B5998"
            android:text="Login With Facebook"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="134dp"
            app:srcCompat="@drawable/or_divider"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_alignTop="@+id/choose_device_text"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/name_prompt"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="139dp"
                android:text="Name"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/name_prompt_field"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/name_prompt"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/birthday_prompt"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_prompt_field"
                android:text="Birthday"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/birthday_field"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthday_prompt"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/birthday_field"
                android:text="Email"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/email_field"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/password"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_field"
                android:text="Password"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/password_field"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/password_confirmation"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_field"
                android:text="Password Confirmation"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/password_confirmation_field"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_confirmation"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#555555"/>

        </RelativeLayout>

        <Button
            android:id="@+id/sign_up_with_email_button"
            android:layout_width="231dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="84dp"
            android:text="Sign Up With Email"
            />

        <ImageView
            android:id="@+id/project_cat_logo_pos"
            android:layout_width="220dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="33dp"
            android:src="@drawable/project_cat_logo_pos"/>

        <ImageView
            android:id="@+id/wwf_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/project_cat_logo_pos"
            android:layout_alignEnd="@+id/facebook_button"
            android:src="@drawable/wwf_logo_black_background"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>